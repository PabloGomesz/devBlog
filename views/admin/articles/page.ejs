<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/newnavbar.ejs') %>

<body>
    <div class="container">
        <br><br>
        <% result.articles.rows.forEach(article => { %>
           <div class="card">
                <div class="card-header">
                    <h2> <%= article.title %> </h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-info bg-info btn-outline-light">Ler Artigo</a>
                </div>
           </div>
           <br><br>
        <% }) %>
      
        <div class="row">
            <div class="col col-12">
               <% if(result.page > 2) { %>
                <a href="/articles/page/<%= result.page -1 %>" style="float: left;">Pagina anterior << </a>
              <% } else if(result.page == 2){ %>
                    <a href="/" style="float: left;">Pagina anterior << </a>
               <% } %>
                

                <% if(result.next) { %>
                    <a href="/articles/page/<%= result.page + 1%>" style="float: right;">Próxma página >></a>
                <% } %>
            
            </div>
        </div>
    </div>

</body>

<%- include ('../../partials/footer.ejs') %>